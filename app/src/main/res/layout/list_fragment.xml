<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/toilets_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:context=".ui.list.ToiletListFragment"
        tools:itemCount="5"
        tools:listitem="@layout/toilet_item" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/toilets_inverse_accessibility_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fragment_margin_horizontal"
        android:layout_marginBottom="@dimen/fragment_margin_vertical"
        app:layout_behavior="com.google.android.material.floatingactionbutton.FloatingActionButton$Behavior"
        app:tint="?colorControlNormal"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_accessible" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
